@page
@model Practice1.Pages.Franchises.IndexModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Franchise[0].TeamName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Franchise[0].Opponent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Franchise[0].Score)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Franchise[0].Stadium)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Franchise[0].Coach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Franchise[0].Mascot)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Franchise[0].TrophyID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Franchise) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opponent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stadium)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mascot)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrophyID)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
